doctype

html(lang="ru")

  -var active = 'Оформление заказа' //активный пункт меню, список в header.jade
  -var pageTitle = 'Оформление заказа' + ' - Avtosteklo' //title страницы для генерации верстки
  -var loggined = true;

  include ./_include/_head

  body

    // Preloader
    include ./_include/_preloader
    
    .base
      include ./_include/_header

      // Content
      main.content
        .container
          
          .row.justify-content-center
            .col-lg-8
              +breadcrumbs()
                +breadcrumbs-item('Главная', './index.html')

              .content__head
                h1 Оформление заказа

              h2.text.--blue Контактная информация

              form(action="#")
                .form-group
                  +field-text({
                    title: 'Имя Фамилия',
                    hasJs: false,
                    isTextarea: false,
                    hasError: false,
                    helpText: '',
                    mods: '',
                    val: '',
                    attrs: {
                      name: 'text',
                      placeholder: 'Введите ваше имя'
                    }
                  })
                .form-group
                  +field-text({
                    title: 'Номер телефона',
                    hasJs: false,
                    isTextarea: false,
                    hasError: false,
                    helpText: '',
                    mods: '',
                    val: '',
                    attrs: {
                      name: 'text',
                      placeholder: '+380 ХХ ХХХ ХХХ'
                    }
                  })
                .form-group
                  +field-text({
                    title: 'Электронная почта',
                    hasJs: false,
                    isTextarea: false,
                    hasError: false,
                    helpText: '',
                    mods: '',
                    val: '',
                    attrs: {
                      name: 'text',
                      placeholder: 'Прмер@gmail.com'
                    }
                  })
                
                .clear10
                +btn('Далее').--block.--xl

      include ./_include/_footer
      //- div(style="height: 1000px; background-color: #000")

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js")

