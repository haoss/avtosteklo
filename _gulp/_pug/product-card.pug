doctype

html(lang="ru")

  -var active = 'Карточка товара' //активный пункт меню, список в header.jade
  -var pageTitle = 'Карточка товара' + ' - Avtosteklo' //title страницы для генерации верстки
  -var loggined = true;

  include ./_include/_head

  body

    // Preloader
    include ./_include/_preloader
    
    .base
      include ./_include/_header

      // Content
      main.content
        .container
          +breadcrumbs()
            +breadcrumbs-item('Главная', './index.html')
            +breadcrumbs-item('Товары и услуги', '#!')

          .content__head.--product-card
            h1 Dacia Nova /SuperNova /Solenza (Седан) (1995-2005)

          .product
            .row
              .col-12.col-lg-4
                .product__gallery
                  .j-product-gallery.j-gallery
                    .product__gallery-block
                      a(href="./tmp/product-img-288-288.png").j-gallery-item
                        img(src="./tmp/product-img-288-288.png", alt="")
                    .product__gallery-block
                      a(href="./tmp/product-img-288-288.png").j-gallery-item
                        img(src="./tmp/product-img-288-288.png", alt="")
                    .product__gallery-block
                      a(href="./tmp/product-img-288-288.png").j-gallery-item
                        img(src="./tmp/product-img-288-288.png", alt="")
              .col-12.col-lg-8
                .product__description
                  .product__th
                    .product__th-row
                      .first
                        b Производитель:
                      .last
                        span SafeGlass
                    .product__th-row
                      .first
                        b Еврокод:
                      .last
                        span 000016037
                    .product__th-row
                      .first
                        b Код:
                      .last
                        span 000016037
                    .product__th-row
                      .first
                        b Размер:
                      .last
                        span 1475*908
                    .product__th-row
                      .first
                        b Цена:
                      .last
                        span 469.6 грн
                  .product__number
                    .cart-count.--mb0.j-cart-count
                      button.cart-count__minus(type='button')
                      button.cart-count__plus(type='button')
                      input.cart-count__input(type='text' value='1')
                    .product__price 939.2 грн
                  +btn('Купить').--block

        .nav__wrapper
          .container
            .nav__wrapper-body
              .nav__wrapper-active
                span Описание
              .nav__wrapper-scroll
                ul.nav.nav__tabs#tabContent(role='tablist').j-tab-mobile
                  li.nav__item(role='presentation')
                    a.nav__link.active#tab1-tab(data-toggle='tab' href='#tab1' role='tab' aria-controls='tab1' aria-selected='true') Описание
                  li.nav__item(role='presentation')
                    a.nav__link#tab2-tab(data-toggle='tab' href='#tab2' role='tab' aria-controls='tab2' aria-selected='false') Видеообзоры
                  li.nav__button
                    button(type="button")

        .container
          .tab-content
            .tab__pane.active#tab1(role='tabpanel' aria-labelledby='tab1-tab')
              p Давно выяснено, что при оценке дизайна и композиции читаемый текст мешает сосредоточиться. Lorem Ipsum используют потому, что тот обеспечивает более или менее стандартное заполнение шаблона, а также реальное распределение букв и пробелов в абзацах, которое не получается при простой дубликации "Здесь ваш текст.. 
              p Здесь ваш текст.. Здесь ваш текст.." Многие программы электронной вёрстки и редакторы HTML используют Lorem Ipsum в качестве текста по умолчанию, так что поиск по ключевым словам
            .tab__pane#tab2(role='tabpanel' aria-labelledby='tab2-tab')
              .video
                .row.video__row
                  .col-12.col-sm-6.col-lg-4
                    .video__block
                      .video__block-thumb
                        a(href="https://www.youtube.com/watch?v=0-7IHOXkiV8").video__block-link.j-popup-youtube
                          img(src="./tmp/video-img-1.png", alt="")
                      .video__block-title Видеообзор 1 
                  .col-12.col-sm-6.col-lg-4
                    .video__block
                      .video__block-thumb
                        a(href="https://www.youtube.com/watch?v=0-7IHOXkiV8").video__block-link.j-popup-youtube
                          img(src="./tmp/video-img-2.png", alt="")
                      .video__block-title Видеообзор 2 


      include ./_include/_footer
      //- div(style="height: 1000px; background-color: #000")

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js")

