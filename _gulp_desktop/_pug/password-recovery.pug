doctype

html(lang="ru")

  -var active = 'Восстановление пароля' //активный пункт меню, список в header.jade
  -var pageTitle = 'Восстановление пароля' + ' - Avtosteklo' //title страницы для генерации верстки
  -var loggined = false;

  include ./_include/_head

  body

    // Preloader
    include ./_include/_preloader

    .base
      include ./_include/_header

      // Content
      main.content
        .container
          +breadcrumbs()
            +breadcrumbs-item('Главная', './index.html')

          .content__head
            h1 Восстановление пароля

          .row
            .col-4
              form(action="#")
                .form-group
                  +field-text({
                    title: 'Логин или электронная почта',
                    hasJs: false,
                    isTextarea: false,
                    hasError: false,
                    helpText: '',
                    mods: '',
                    val: '',
                    attrs: {
                      name: 'text',
                      placeholder: 'Пример@gmail.com'
                    }
                  })
                .form-group
                  +field-text({
                    title: 'Номер телефона',
                    hasJs: false,
                    isTextarea: false,
                    hasError: false,
                    helpText: '',
                    mods: '',
                    val: '',
                    attrs: {
                      name: 'text',
                      placeholder: '+380 ХХ ХХХ ХХХ'
                    }
                  })
                    a(href="#!").--fs14 Забыли пароль?
                .form-group
                  +btn('Восстановить пароль').--block.--xl
                a(href="#!").text.--dark Зарегистрироваться

      include ./_include/_footer
      //- div(style="height: 1000px; background-color: #000")

    // Load Scripts
    include ./_include/_footer-js
    script(src="./js/common.js")

