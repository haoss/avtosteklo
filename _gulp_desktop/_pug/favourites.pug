doctype

html(lang="ru")

  -var active = 'Избранное' //активный пункт меню, список в header.jade
  -var pageTitle = 'Избранное' + ' - Avtosteklo' //title страницы для генерации верстки
  -var loggined = false;

  include ./_include/_head

  body

    // Preloader
    include ./_include/_preloader
    
    .base
      include ./_include/_header

      // Content
      main.content
        .container
          +breadcrumbs()
            +breadcrumbs-item('Главная', './index.html')

          .content__head
            h1 Избранное

        .catalog-code
